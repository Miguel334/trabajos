<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<%for (let i=0; i < visitados.length; i++) { let id=visitados[i].id %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=id%> ">
						<figure class="product-box_image">
							<img src="/images/products/<%=visitados[i].image%> " alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<% let preciofinal=  visitados[i].price-(visitados[i].discount* visitados[i].price/100)
							preciofinal=Math.round(preciofinal) %> 
							<h2><%=miles(preciofinal)%> </h2>
							<span><%=visitados[i].discount%> % OFF</span>
							<p><%=visitados[i].name%> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
	    	<% } %> 
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% for (let i = 0; i < ofertas.length; i++){let id=ofertas[i].id%> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=ofertas[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<%let preciofinal=  ofertas[i].price-(ofertas[i].discount* ofertas[i].price/100)
							preciofinal=Math.round(preciofinal)  %> 
							<h2><%=preciofinal %></h2>
							<span><%=ofertas[i].discount %>% OFF</span>
							<p><%=ofertas[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
		    <% } %> 
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>